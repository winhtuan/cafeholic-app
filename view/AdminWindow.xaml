<Window x:Class="CAFEHOLIC.view.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAFEHOLIC.view"
        mc:Ignorable="d"
        Title="Admin Dashboard"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Border Background="White" CornerRadius="20" Margin="20" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="10" VerticalAlignment="Center">
                <!-- Logo or Title -->
                <TextBlock Text="☕ CAFEHOLIC Admin Panel"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#4A4A4A"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <Button Content="Dashboard"
                            Margin="10,0"
                            Padding="15,6"
                            Click="AdminPage_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderBrush="#388E3C"
                            FontWeight="Bold"
                            Cursor="Hand"/>

                    <Button Content="Logout"
                            Margin="10,0"
                            Padding="15,6"
                            Click="Logout_Click"
                            Background="#F44336"
                            Foreground="White"
                            BorderBrush="#D32F2F"
                            FontWeight="Bold"
                            Cursor="Hand"/>
                </StackPanel>
            </DockPanel>

            <!-- Main content -->
            <Frame x:Name="MainFrame"
                   Grid.Row="1"
                   Margin="10"
                   NavigationUIVisibility="Hidden"
                   Background="#FAFAFA"
                   />
        </Grid>
    </Border>
</Window>
