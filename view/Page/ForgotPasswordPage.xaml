<Page x:Class="CAFEHOLIC.view.Page.ForgotPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

      xmlns:local="clr-namespace:CAFEHOLIC.view.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ForgotPasswordPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFE63070" Offset="0" />
                <GradientStop Color="#FFFE8704" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Margin="40" VerticalAlignment="Center">
            <TextBlock
             Text="Forgot Password?"
             FontFamily="Great Vibes"
             FontSize="32"
             Foreground="White"
             HorizontalAlignment="Center"
             Margin="0,0,0,20"/>

            <!-- Email -->
            <TextBox
             x:Name="txtPhone"
             Margin="0,5"
             materialDesign:HintAssist.Hint="Enter your registered phone number"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             Foreground="White"
             BorderBrush="White"/>

            <TextBlock
             Text="We'll send OTP to reset your password."
             FontSize="12"
             Foreground="White"
             Margin="0,10,0,20"
             TextWrapping="Wrap"
             TextAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button
                 Width="100"
                 Content="Send"
                 Click="btnSend_Click"
                 Background="#D94448"
                 Foreground="White"
                 Style="{StaticResource MaterialDesignRaisedButton}" />

                <Button
                 Width="80"
                 Margin="10,0,0,0"
                 Content="Cancel"
                 Click="btnCancel_Click"
                 Style="{StaticResource MaterialDesignFlatButton}"
                 Foreground="White" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
