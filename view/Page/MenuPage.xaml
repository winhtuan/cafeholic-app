<Page
    x:Class="CAFEHOLIC.view.Page.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CAFEHOLIC.view.Page"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MenuPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Menu Section  -->
        <ScrollViewer
            Grid.Column="0"
            Padding="10"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Margin="20,0,0,10">
                    <!--  Tiêu đề  -->
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="Danh sách đồ uống" />

                    <StackPanel
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <!--  Ô tìm kiếm  -->
                        <TextBox
                            Width="300"
                            materialDesign:HintAssist.Hint="Tìm đồ uống..."
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" />
                        <!--  Nút Voice Order  -->
                        <Button
                            Width="220"
                            Height="40"
                            Margin="10,0,0,0"
                            Padding="8,0"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Command="{Binding VoiceOrderCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}">

                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,4,0"
                                    Kind="Microphone" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="Black"
                                    Text="Đặt hàng bằng giọng nói" />
                            </StackPanel>
                        </Button>

                    </StackPanel>

                </StackPanel>

                <!--  Danh sách đồ uống  -->
                <ItemsControl ItemsSource="{Binding Drinks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card
                                Margin="10"
                                Padding="10"
                                materialDesign:ColorZoneAssist.Mode="PrimaryLight"
                                materialDesign:ElevationAssist.Elevation="Dp2"
                                Background="White">

                                <StackPanel>
                                    <Image
                                        Height="120"
                                        Margin="0,0,0,10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        ClipToBounds="True"
                                        Source="{Binding img}"
                                        Stretch="UniformToFill" />

                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                        Text="{Binding Name}"
                                        TextWrapping="Wrap" />

                                    <StackPanel
                                        Margin="0,5,0,0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource PrimaryHueMidBrush}"
                                            Style="{DynamicResource MaterialDesignBody1TextBlock}"
                                            Text="{Binding Price, StringFormat='Giá: ${0:0.##}'}" />

                                        <Button
                                            Width="36"
                                            Height="36"
                                            Margin="10,0,0,0"
                                            Padding="0"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignIconButton}">
                                            <materialDesign:PackIcon
                                                Width="20"
                                                Height="20"
                                                Kind="CartPlus" />
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!--  Cart Section  -->
        <Border Grid.Column="1" Padding="10">
            <StackPanel>
                <TextBlock
                    Width="148"
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="Đồ uống đã chọn" />
                <!--  Danh sách sản phẩm  -->
                <ListBox ItemsSource="{Binding CartItems}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <!--  Tên sản phẩm  -->
                                <TextBlock FontWeight="SemiBold" Text="{Binding Drink.Name}" />
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Giá  -->
                                    <TextBlock
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        Text="{Binding Drink.Price, StringFormat='${0:0.##}'}" />

                                    <!--  Số lượng  -->
                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Foreground="Gray"
                                        Text="{Binding Quantity, StringFormat='  x{0:N0}'}" />

                                    <!--  Nút xóa  -->
                                    <Button
                                        Grid.Column="2"
                                        Width="24"
                                        Height="24"
                                        Margin="10,0,0,0"
                                        Padding="0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource MaterialDesignIconButton}">
                                        <materialDesign:PackIcon
                                            Width="16"
                                            Height="16"
                                            Kind="Close" />
                                    </Button>
                                </Grid>

                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel>
                    <!--  Tổng tiền  -->
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="DarkRed"
                            Text="Tổng Tiền:" />

                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="16"
                            Foreground="DarkRed"
                            Text="{Binding TotalPriceAll, StringFormat='${0:0.##}'}" />
                    </StackPanel>

                    <!--  Nút thanh toán  -->
                    <Button
                        Width="120"
                        Margin="0,20,0,0"
                        Padding="10,4"
                        HorizontalAlignment="Left"
                        Background="#FF6F00"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Command="{Binding CheckoutCommand}"
                        Content="Xác Nhận"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />

                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
