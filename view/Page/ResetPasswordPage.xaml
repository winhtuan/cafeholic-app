<Page x:Class="CAFEHOLIC.view.Page.ResetPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CAFEHOLIC.view.Page"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResetPasswordPage">

    <Grid Margin="30">
        <Border Background="White" CornerRadius="10" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Reset Password" FontSize="20" FontWeight="Bold" Margin="0 0 0 20" TextAlignment="Center"/>

                <TextBlock Text="New Password" />
                <PasswordBox x:Name="txtNewPassword" Margin="0 5 0 15" />

                <TextBlock Text="Confirm Password" />
                <PasswordBox x:Name="txtConfirmPassword" Margin="0 5 0 25" />

                <Button Content="Submit"
                        Click="btnSubmit_Click"
                        Background="#1976D2"
                        Foreground="White"
                        Height="35"
                        FontWeight="Bold"
                        Cursor="Hand" />

                <Button Content="Cancel"
                        Click="btnCancel_Click"
                        Margin="0 10 0 0"
                        Background="Transparent"
                        BorderBrush="Gray"
                        Foreground="Gray"
                        Height="30"
                        Cursor="Hand" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
