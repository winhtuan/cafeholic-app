<Page x:Class="CAFEHOLIC.view.Page.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:CAFEHOLIC.view.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFE63070" Offset="0" />
                <GradientStop Color="#FFFE8704" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Margin="40" VerticalAlignment="Center">
            <TextBlock
            Text="Register"
            FontFamily="Great Vibes"
            FontSize="36"
            Foreground="White"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"/>

            <!-- Username -->
            <TextBox
            x:Name="txtUsername"
            Margin="0,5"
            materialDesign:HintAssist.Hint="Full name"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            Foreground="White"
            BorderBrush="White"/>

            <!-- Email -->
            <TextBox
            x:Name="txtPhone"
            Margin="0,5"
            materialDesign:HintAssist.Hint="Phone number"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            Foreground="White"
            BorderBrush="White"/>

            <!-- Password -->
            <PasswordBox
x:Name="txtPassword"
Margin="0,5"
materialDesign:HintAssist.Hint="Password"
materialDesign:TextFieldAssist.DecorationVisibility="Visible"
Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
Foreground="White"
BorderBrush="White" />


            <!-- Confirm Password -->
            <PasswordBox
x:Name="txtConfirmPassword"
Margin="0,5"
materialDesign:HintAssist.Hint="Confirm Password"
materialDesign:TextFieldAssist.DecorationVisibility="Visible"
Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
Foreground="White"
BorderBrush="White" />


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button
                Width="100"
                Content="Register"
                Click="btn_register"
                Background="#D94448"
                Foreground="White"
                Style="{StaticResource MaterialDesignRaisedButton}" />

                <Button
                Width="80"
                Margin="10,0,0,0"
                Content="Cancel"
                Click="btnCancel_Click"
                Style="{StaticResource MaterialDesignFlatButton}"
                Foreground="White" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
