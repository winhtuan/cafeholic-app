<Page
    x:Class="CAFEHOLIC.view.Page.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CAFEHOLIC.view.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DrinkVM"
    mc:Ignorable="av">

    <Grid Margin="20" Background="#f5f5f5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel
                    Margin="0,0,0,15"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Button
                        Width="200"
                        Height="40"
                        Margin="0,0,10,0"
                        Background="#4CAF50"
                        Click="GoToRoomPage_Click"
                        Content="📚 Study Rooms"
                        FontWeight="Bold"
                        Foreground="White" />
                    <Button
                        Width="150"
                        Height="40"
                        Background="#FFA500"
                        Click="GoToMenuPage_Click"
                        Content="🥤 Menu"
                        FontWeight="Bold"
                        Foreground="White" />
                </StackPanel>

                <!--  Câu dẫn từ Gemini  -->
                <TextBlock
                    Margin="0,0,0,15"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="DarkSlateGray"
                    Text="{Binding SuggestionText}"
                    TextWrapping="Wrap" />

                <!--  Danh sách đồ uống gợi ý  -->
                <ItemsControl ItemsSource="{Binding RecommendedDrinks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="White"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="5">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontStyle="Italic"
                                        Foreground="Gray"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontWeight="SemiBold"
                                        Text="{Binding Price, StringFormat='Price: {0}VND'}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>