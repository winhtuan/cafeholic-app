<Page x:Class="CAFEHOLIC.view.Page.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:CAFEHOLIC.view.Page"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="av"
      Title="DrinkVM">

    <Grid Background="#f5f5f5" Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Câu dẫn từ Gemini -->
                <TextBlock Text="{Binding SuggestionText}" 
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="DarkSlateGray"
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"/>

                <!-- Danh sách đồ uống gợi ý -->
                <ItemsControl ItemsSource="{Binding RecommendedDrinks}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray"
                                    BorderThickness="1"
                                    Margin="5"
                                    Padding="10"
                                    CornerRadius="5"
                                    Background="White">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Bold"
                                               FontSize="16" />
                                    <TextBlock Text="{Binding Description}"
                                               TextWrapping="Wrap"
                                               FontStyle="Italic"
                                               Foreground="Gray"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding Price, StringFormat='Price: {0}VND'}"
                                               FontWeight="SemiBold"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
