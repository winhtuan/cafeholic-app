<Window x:Class="CAFEHOLIC.view.HomeWindown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAFEHOLIC.view"
        mc:Ignorable="d"
        Title="HomeWindown" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hàng chứa các nút -->
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
            <Button Content="Homepage" 
                Margin="0,0,10,0"
                Padding="10,5"
                Click="Homepage_Click"/>

            <Button Content="Logout"
                Padding="10,5"
                Click="Logout_Click"/>
        </StackPanel>

        <!-- Khung Frame điều hướng -->
        <Frame x:Name="MainFrame" Grid.Row="1"
           NavigationUIVisibility="Hidden" 
           Background="#FFFFFF" 
           BorderBrush="#E5E7EB" 
           BorderThickness="0,1,0,0"/>
    </Grid>

</Window>
