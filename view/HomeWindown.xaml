<Window
    x:Class="CAFEHOLIC.view.HomeWindown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CAFEHOLIC.view"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CAFEHOLIC"
    Width="800"
    Height="450"
    Icon="https://cafeholic-imgs.s3.ap-southeast-1.amazonaws.com/java-logo.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Hàng chứa các nút  -->
        <StackPanel
            Margin="10"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Padding="10,5"
                Background="#2196F3"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="Homepage_Click"
                Content="Trang chủ"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                Margin="0,0,10,0"
                Background="#4CAF50"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="GoToRoomPage_Click"
                Content="Phòng Học"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                Background="#FFA500"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="GoToMenuPage_Click"
                Content="Menu"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                Margin="10,0,0,0"
                Background="#4CAF50"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="ProfilePage_Click"
                Content="Trang cá nhân"
                FontWeight="Bold"
                Foreground="White" />
            <Button
                Margin="10,0,0,0"
                Padding="10,5"
                Background="Red"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="Logout_Click"
                Content="Đăng xuất"
                FontWeight="Bold" />
        </StackPanel>

        <!--  Khung Frame điều hướng  -->
        <Frame
            x:Name="MainFrame"
            Grid.Row="1"
            Background="#FFFFFF"
            BorderBrush="#E5E7EB"
            BorderThickness="0,1,0,0"
            NavigationUIVisibility="Hidden" />
    </Grid>

</Window>
